{
  "compilerOptions": {
    "lib": ["es2018", "esnext.asynciterable"],
    "module": "commonjs",
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2018",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./src",
    "paths": {
      "@/*": ["*"],
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
